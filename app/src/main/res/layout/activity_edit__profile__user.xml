<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alan.Edit_Profile_User">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_profile_user"
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:layout_weight="1"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <Button
                android:id="@+id/edit_change_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:text="Change" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_username_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="66.6"
                android:text="Username"
                android:textSize="18dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editET_username_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="test001"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_firstname_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="66.6"
                android:text="First Name"
                android:textSize="18dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editET_firstname_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tai Man"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_lastname_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="66.6"
                android:text="Last Name"
                android:textSize="18dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editET_lastname_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Chan"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_sex_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="66.6"
                android:text="Sex"
                android:textSize="18dp"
                android:visibility="visible" />

            <RadioGroup
                android:id="@+id/edit_sex_radioGroup"
                android:layout_width="381dp"
                android:layout_height="match_parent"
                android:layout_weight="33.3">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:onClick="checkButton"
                    android:text="male"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:onClick="checkButton"
                    android:text="female"
                    android:textSize="18dp" />
            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_phonenum_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="66.6"
                android:text="Phone"
                android:textSize="18dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editET_phonenum_user"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_weight="33.3"
                android:background="@null"
                android:ems="10"
                android:inputType="number"
                android:text="91234567"
                android:textSize="18dp"
                android:weightSum="100" />

        </LinearLayout>

        <Button
            android:id="@+id/edit_save_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>